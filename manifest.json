{
  "manifest_version": 2,

  "name": "Quizify!",
  "description": "Makes the current page into a fill-in-the-blanks quiz.",
  "version": "0.5",

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/anvil_icon_detail.png"
  },

  "permissions": [
    "activeTab"
  ]
}
